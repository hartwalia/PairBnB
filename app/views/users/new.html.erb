<div id="clearance" class="sign-up">

  <%= form_for @user do |form| %>
 
  <div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
      <div class="panel panel-info">

        <div class="panel-heading">
          <div class="panel-title">Sign Up</div>
        </div>

        <div style="padding-top:30px" class="panel-body" >
          <form id="signupform" class="form-horizontal" role="form">

            <div id="signupalert" style="display:none" class="alert alert-danger">
              <p>Error:</p>
              <span></span>
            </div>

            <div style="margin-bottom: 40px" class="form-group">
              <label for="firstname" class="col-md-3 control-label">Name</label>
              <div class="col-md-9">
                <%= form.text_field :name, type: 'name', id: "login-username", class: "form-control", placeholder: "Name" %>                       
              </div>
            </div>

            <div style="margin-bottom: 80px" class="form-group">
              <label for="email" class="col-md-3 control-label">Email</label>
              <div class="col-md-9">
              <%= form.text_field :email, type: 'email', id: "login-username", class: "form-control", placeholder: "Email Address" %>                       
              </div>
            </div>

            <div style="margin-bottom: 120px" class="form-group">
              <label for="password" class="col-md-3 control-label">Password</label>
              <div class="col-md-9">
              <%= form.password_field :password, id: "login-password", class: "form-control", placeholder: "Password"%>
              </div>
            </div>

            <div style="margin-bottom: 160px" class="form-group">
              <!-- Button -->                                        
              <div class="col-md-offset-3 col-md-9">
                <%= form.submit "Sign Up", id: "btn-signup", class: "btn btn-info" %>
                <span style="margin-left:8px;">or</span>
                <a id="btn-fbsignup" href="/auth/facebook" class="btn btn-primary">Sign Up with Facebook</a>
              </div>
            </div>

            <div style="margin-bottom: 200px" class="form-group">
              <div class="col-md-offset-3 col-md-9">
                <div style="padding-top:15px; font-size:85%">Already have an account ? <%= link_to t(".sign_in_here"), sign_in_path %></div>
              </div>
            </div>   

          </form>
        </div>
      </div>
    </div> 
  </div>

  <% end %>
</div>
